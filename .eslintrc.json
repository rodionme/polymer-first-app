{
  "extends": ["eslint:recommended", "google"],
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "plugins": [
    "html"
  ],
  "rules": {
    "no-var": "off",
    "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
    "space-before-function-paren": ["error", {
      "anonymous": "always",
      "named": "never",
      "asyncArrow": "always"
    }],
    "object-curly-spacing": ["error", "always", { "arraysInObjects": false }]
  },
  "globals": {
    "Polymer": true,
    "d3": true
  }
}
